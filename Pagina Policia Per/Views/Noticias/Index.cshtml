@model IEnumerable<Pagina_Policia_Per.Models.Noticia>

@{
    ViewData["Title"] = "Noticias";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-5 mt-5">
    <h1 class="section-title">Actualidad Policial</h1>
    <p class="text-center text-muted mb-5">Mantente informado sobre las últimas novedades y operativos de la Policía de Entre Ríos.</p>

    <div class="row">
        @foreach (var noticia in Model.OrderByDescending(n => n.FechaPublicacion))
        {
            <div class="col-lg-4 col-md-6 mb-4 d-flex align-items-stretch news-card">
                <div class="card h-100 w-100">
                    <img src="@noticia.ImagenUrl" class="card-img-top" alt="@noticia.Titulo">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@noticia.Titulo</h5>
                        <p class="card-text flex-grow-1">@noticia.Resumen</p>
                        <p class="card-text mt-2"><small class="text-muted">Publicado: @noticia.FechaPublicacion.ToShortDateString()</small></p>
                        <a asp-controller="Noticias" asp-action="Detalle" asp-route-slug="@noticia.Slug" class="btn btn-outline-primary mt-auto">Leer más</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>