@{
    ViewData["Title"] = "Bienvenido";
}

<!-- 1. HERO VIDEO (Se mantiene igual) -->
<div id="inicio" class="hero-section">
    <video playsinline autoplay muted loop poster="~/img/poster-placeholder.jpg" class="hero-video">
        <source src="https://storage.googleapis.com/gtv-videos-bucket/sample/ForBiggerEscapes.mp4" type="video/mp4">
    </video>
    <div class="hero-overlay"></div>
    <div class="hero-content text-center text-white">
        <h1 class="display-3 fw-bold">Compromiso y Servicio</h1>
        <p class="lead mb-4">Protegiendo a la comunidad de Entre Ríos las 24 horas.</p>
        <a class="btn btn-primary btn-lg" asp-controller="Tramites" asp-action="Index">Realizar un Trámite</a>
        <a class="btn btn-outline-light btn-lg" href="#contacto">Teléfonos Útiles</a>
    </div>
</div>

<main>
    <!-- 2. SECCIÓN DE ACCESOS RÁPIDOS (Se mantiene, es información clave) -->
    <div class="bg-light">
        <div class="container py-5">
            <h2 class="section-title">Accesos Directos</h2>
            <div class="row">
                <!-- Aquí mantienes las 4 tarjetas de íconos que ya teníamos -->
            </div>
        </div>
    </div>

    <!-- 3. NUEVA SECCIÓN: "ÚLTIMAS NOTICIAS DESTACADAS" -->
    <div class="container py-5">
        <h2 class="section-title">Actualidad Policial</h2>
        <div class="row">
            <!-- Más adelante, el Controlador seleccionará las 3 noticias más importantes y las mostrará aquí -->
            <!-- Ejemplo estático por ahora: -->
            <div class="col-lg-4 col-md-6 mb-4 news-card"> <!-- Tarjeta de Noticia 1 --> </div>
            <div class="col-lg-4 col-md-6 mb-4 news-card"> <!-- Tarjeta de Noticia 2 --> </div>
            <div class="col-lg-4 col-md-6 mb-4 news-card"> <!-- Tarjeta de Noticia 3 --> </div>
        </div>
        <div class="text-center mt-4">
            <a class="btn btn-outline-primary" asp-controller="Noticias" asp-action="Index">Ver Todas las Noticias</a>
        </div>
    </div>

    <!-- 4. NUEVA SECCIÓN: "CIFRAS QUE INSPIRAN CONFIANZA" (Para vender la imagen) -->
    <div class="bg-dark text-white">
        <div class="container py-5 text-center">
            <h2 class="section-title" style="color:white;">Nuestra Labor en Números</h2>
            <div class="row">
                <div class="col-md-4">
                    <h3 class="display-4 fw-bold">+1,500</h3>
                    <p class="lead">Operativos Mensuales</p>
                </div>
                <div class="col-md-4">
                    <h3 class="display-4 fw-bold">+500</h3>
                    <p class="lead">Nuevos Cadetes en Formación</p>
                </div>
                <div class="col-md-4">
                    <h3 class="display-4 fw-bold">24/7</h3>
                    <p class="lead">Protección Continua</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 5. NUEVA SECCIÓN: LLAMADA A LA ACCIÓN (Call to Action) -->
    <div class="container py-5 text-center">
        <h2 class="section-title">Únete a la Fuerza</h2>
        <p class="lead mb-4">Forma parte de una institución con historia y vocación de servicio. </p>
        <a href="#" class="btn btn-primary btn-lg">Conviértete en Cadete</a>
    </div>
</main>