@model Pagina_Policia_Per.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Aumentamos el margen superior e inferior del contenedor principal *@
<div class="container my-5 py-5">
    @* Usamos "my-5" (margen vertical grande) y "py-5" (padding vertical grande) *@
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        @* Mostrar mensajes de error de resumen *@
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="EmailOrUserName"></label>
                            <input asp-for="EmailOrUserName" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                            <label class="form-check-label" asp-for="RememberMe"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Iniciar Sesión</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
