<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Policía de Entre Ríos</title>

    <!-- Enlaces a CDNs (igual que antes) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- ¡IMPORTANTE! Esta es la forma correcta de enlazar tu CSS en .NET. -->
    <!-- La tilde (~) apunta a la raíz de la carpeta wwwroot. -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="main-nav">
            <div class="container">

                <!-- 1. Enlace del Logo (apunta a la página de inicio) -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shield-halved fa-2x me-2"></i>
                    <span class="fw-bold">Policía de Entre Ríos</span>
                </a>

                <!-- 2. Botón para el menú en móviles -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- 3. Contenedor de los enlaces del menú (la parte que se colapsa en móviles) -->
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <!-- La clase "ms-auto" en este <ul> es la clave para alinear todo a la derecha -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <!-- Por ahora apunta a #, luego será asp-controller="Noticias" asp-action="Index" -->
                            <a class="nav-link" href="#">Noticias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Trámites</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Institucional
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <!-- Añadido dropdown-menu-dark para que combine -->
                                <li><a class="dropdown-item" href="#">Misión y Visión</a></li>
                                <li><a class="dropdown-item" href="#">Plana Mayor</a></li>
                                <li><a class="dropdown-item" href="#">Historia</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <!-- El footer ya tiene id="contacto", así que un link directo funciona bien -->
                            <a class="nav-link" href="#contacto">Contacto</a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <!-- Esta línea mágica es donde se inyectará el contenido de cada página (ej. Index.cshtml) -->
    @RenderBody()

    <footer id="contacto" class="bg-dark text-white pt-5 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold"><i class="fas fa-shield-halved me-2"></i>Policía de Entre Ríos</h5>
                    <p>Jefatura Central: [Dirección de la Jefatura], Paraná, Entre Ríos.</p>
                    <p>Teléfono: (0343) 123-4567</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold">Links Útiles</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="footer-link">Ministerio de Seguridad</a></li>
                        <li><a href="#" class="footer-link">Gobierno de Entre Ríos</a></li>
                        <li><a href="#" class="footer-link">Denuncias Anónimas</a></li>
                        <li><a href="#" class="footer-link">Clínica Policial</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase fw-bold">Redes Sociales</h5>
                    <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="text-center pt-3 border-top border-secondary">
                <p>© @DateTime.Now.Year - Policía de Entre Ríos. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Tu JavaScript personalizado (no-React) iría aquí -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>