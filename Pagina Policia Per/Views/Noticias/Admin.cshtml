@model IEnumerable<Pagina_Policia_Per.Models.Noticia>

@{
    ViewData["Title"] = "Dashboard de Noticias";
}

<div class="container main-content-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Dashboard de Noticias</h1>
        <a asp-action="Crear" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Crear Nueva Noticia
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Imagen</th>
                        <th>Título</th>
                        <th>Fecha de Publicación</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(item.ImagenUrl ?? "/img/noticias/default.jpg")" alt="Miniatura" style="width: 100px; height: 60px; object-fit: cover; border-radius: 5px;" />
                            </td>
                            <td class="fw-bold">@item.Titulo</td>
                            <td>@item.FechaPublicacion.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end">
                                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit me-1"></i> Editar
                                </a>
                                <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm ms-2">
                                    <i class="fas fa-trash-alt me-1"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>