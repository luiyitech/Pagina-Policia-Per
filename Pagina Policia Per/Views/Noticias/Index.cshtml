@{
    ViewData["Title"] = "Noticias";
}

<!-- 1. CABECERA DE LA PÁGINA (Usando tu estilo de 'page-header' para consistencia) -->
<div class="page-header">
    <div class="page-header-overlay"></div>
    <div class="container position-relative">
        <h1 class="display-4 fw-bold text-white">Actualidad Policial</h1>
        <p class="lead text-white">Mantente informado sobre las últimas novedades y operativos de la Policía de Entre Ríos.</p>
    </div>
</div>

<!-- 2. CONTENEDOR PARA LAS NOTICIAS (Ahora preparado para carga dinámica) -->
<div class="container my-5">

    <!-- Este es el contenedor que llenaremos con JavaScript. Ya no hay 'foreach'. -->
    <div id="noticias-container" class="row gy-4">
        <!-- Las tarjetas de noticias se cargarán aquí dinámicamente -->
    </div>

    <!-- Indicador de carga que mostraremos mientras se piden más noticias -->
    <div id="loading-spinner-noticias" class="text-center my-4" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>

</div>